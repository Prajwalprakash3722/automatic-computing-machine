// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id               String             @id @default(cuid())
  event            String
  date             String
  amount           Float
  type             String
  level            Int
  LastStatus       Boolean            @default(true)
  description      String
  signedOff        String
  society          String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  assets           Asset[]
  ApprovedComments ApprovedComments[]
  RejectedComments RejectedComments[]
}

// Assets Schema related to Transaction based on transaction id
model Asset {
  id            String      @id @default(cuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  url           String
  type          String // either a report or bills 
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

enum Type {
  open
  debit
  credit
}

model ApprovedComments {
  id            String      @id @default(cuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  comment       String
  by            String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model RejectedComments {
  id            String      @id @default(cuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  comment       String
  by            String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
